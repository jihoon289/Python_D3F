<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WrapDragTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid AllowDrop="True">
        <WrapPanel HorizontalAlignment="Left" Height="183" Margin="375,21,0,0" VerticalAlignment="Top" Width="335" AllowDrop="True" DragEnter="WrapPanel_DragEnter" Background="White"/>
        <TextBox HorizontalAlignment="Left" Height="83" Margin="41,64,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="208"/>
        <StackPanel HorizontalAlignment="Left" Height="200" Margin="375,209,0,0" VerticalAlignment="Top" Width="393" AllowDrop="True" DragOver="StackPanel_DragOver" Background="White"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="122" Margin="41,204,0,0" VerticalAlignment="Top" Width="208" MouseDown="Label_MouseDown" MouseMove="Label_MouseMove"/>

    </Grid>
</Window>
